{
  "compilerOptions": {
    "outDir": "lib",
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "esnext",
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true
  },
  "include": ["src"]
}
